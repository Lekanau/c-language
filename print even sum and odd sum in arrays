#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int i,n,osum,esum;
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }for(i=0,esum=0,osum=0;i<n;i++)
    {
        if(a[i]%2==0){
            esum=esum+a[i];
        
    } 
    else
    {
        osum=osum+a[i];
    }
    }

    printf("%d\n",osum);
    printf("%d\n",esum);
    
    

       
    return 0;
}
output:
3
31
28
13
