#include <stdio.h>

int main() {
   int i,n,sum=0,flag=0;
   scanf("%d",&n);
   i=1;
   while(i<=n){
       
       if(i%2!=0){
           if(flag==0){
           printf("%d",i);
           sum=sum+i;
           flag=1;
           }
           else{
               printf("+%d",i);
               sum=sum+i;
           }
          
       }
       i++;

       
   }
   printf("=%d",sum);
    return 0;
}
output:
5
1+3+5=9
